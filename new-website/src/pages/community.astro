---
import Platforms from '../components/Platforms.astro';
import MainLayout from '../layouts/MainLayout.astro';
import CommunityStats from '../components/CommunityStats.astro';
import SponsorsSection from '../components/SponsorsSection.astro';

import { communityLibrary } from '../indexes/community';
import TitleSection from '../components/TitleSection.astro';
import ContentItems from '../components/ContentItems.astro';
---

<MainLayout isHeaderExpanded={true} isBlue={true}>
  <section id="hero" class="text-gray-200">
    <div class="container mx-auto px-6 text-center py-10">
      <div>

        <div class="py-14 md:py-20 animate-from-top-fade">
          <h1 class="text-5xl font-medium">Join the Colyseus Community!</h1>
          <p class="mt-4 text-slate-300">Exchange ideas, share knowledge, connect and learn from like-minded people within the Colyseus Community.</p>
        </div>

        <div class="space-x-2 md:space-x-4 text-center">
          <a class="p-4 text-base md:text-xl font-semibold bg-gray-600 rounded transition-all hover:bg-gray-700" href="https://github.com/orgs/colyseus/discussions" target="_blank">
