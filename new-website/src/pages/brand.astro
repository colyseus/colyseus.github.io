---
import Layout from '../layouts/BlogPost.astro';
---

<Layout title="Brand">
  <p>Please do not edit, change, distort, recolor, or reconfigure the Colyseus logo.</p>

  <h2>Our Logo</h2>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
    <div class="bg-gray-900 p-8 rounded">
      <a href="/images/logos/logo-light.png"><img src="/images/logos/logo-light.png" alt="Colyseus Light Logo" /></a>
    </div>
    <div class="bg-slate-50 p-8 rounded">
      <a href="/images/logos/logo-dark.png"><img src="/images/logos/logo-dark.png" alt="Colyseus Dark Logo" /></a>
    </div>
    <div class="bg-gray-900 p-8 rounded">
      <a href="/images/logos/logo-light-color.png"><img src="/images/logos/logo-light-color.png" alt="Colyseus Light Colored Logo" /></a>
    </div>
    <div class="bg-slate-50 p-8 rounded">
      <a href="/images/logos/logo-dark-color.png"><img src="/images/logos/logo-dark-color.png" alt="Colyseus Dark Colored Logo" /></a>
    </div>
  </div>

  <h2>Mark only</h2>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
    <div class="bg-gray-900 p-8 rounded">
      <a href="/images/logos/emblem-light.png"><img src="/images/logos/emblem-light.png" alt="Colyseus Light Emblem" /></a>
    </div>
    <div class="bg-slate-50 p-8 rounded">
      <a href="/images/logos/emblem-dark.png"><img src="/images/logos/emblem-dark.png" alt="Colyseus Dark Emblem" /></a>
    </div>
    <div class="bg-gray-900 p-8 rounded">
      <a href="/images/logos/emblem-color.png"><img src="/images/logos/emblem-color.png" alt="Colyseus Colored Emblem" /></a>
    </div>
    <div class="bg-slate-50 p-8 rounded">
      <a href="/images/logos/emblem-color.png"><img src="/images/logos/emblem-color.png" alt="Colyseus Colored Emblem" /></a>
    </div>
  </div>
</Layout>
