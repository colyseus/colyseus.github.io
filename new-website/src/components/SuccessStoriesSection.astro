---
import { getCollection } from 'astro:content';

const successStories = (await getCollection('success-stories')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<section class="bg-gray-100 text-gray-700 text-center border-b border-solid border-gray-300">
  <div class="container container mx-auto relative py-14">
    <h2 class="text-xl font-medium text-gray-500 uppercase tracking-widest">Trusted and Loved by Indies and Studios Worldwide</h2>

    <div class="grid grid-cols-3 gap-6 justify-center items-center my-12 text-sm">
      {[...successStories, ...successStories, ...successStories].filter((story) => story.data.author_img).map((story, i) => (
        <a class={"animate-delay-" + i + " animate-from-bottom-fade flex space-x-4 transition-all shadow w-full rounded p-4 items-center justify-center hover:shadow-lg"} href={`/success-stories/${story.slug}/`}>
          <img class="rounded-full w-24 shadow-lg" src={story.data.author_img} alt={story.data.author} />
          <span>
            <span class="inline-block italic font-light">"Lorem ipsum dolor sit amet consectetur adipisicing elit. Error eveniet eius voluptate laborum aspernatur voluptatem amet dolor explicabo obcaecati eaque. Molestiae modi officiis odio. Reiciendis velit minus maxime tempora vitae."</span>
            <span class="inline-block mt-2">{story.data.author} - {story.data.author_ref}</span>
          </span>
        </a>
      ))}
    </div>

    <div class="flex space-x-8 justify-center">
      <a href="/success-stories" class="group transition-all text-gray-500 hover:text-gray-600 font-semibold ">
        View Success Stories
        <svg class="inline-block transition-transform ease-out relative group-hover:translate-x-1" width="24" height="24" viewBox="0 0 24 24"><g fill="none" fill-rule="evenodd"><path d="M0 0h24v24H0z"></path><path fill="currentColor" d="M16.707 7.293l-1.414 1.414L17.586 11H2v2h15.586l-2.293 2.293 1.414 1.413L21.414 12z"></path></g></svg>
      </a>
    </div>
  </div>
</section>
