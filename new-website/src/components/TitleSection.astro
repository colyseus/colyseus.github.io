---
interface Props {
  separator?: boolean;
}

const separator = Astro.props.separator;
---
<section>
  <div class={`container mx-auto px-6 text-center flex items-center justify-center lg:flex-row relative py-10 ${(separator) ? "border-b border-gray-200" : ""}`}>
    <!-- animate-from-top-fade -->
    <h1 class="py-2 md:py-8 text-4xl md:text-6xl font-semibold text-gray-900 ">
      <slot />
    </h1>
  </div>
</section>

