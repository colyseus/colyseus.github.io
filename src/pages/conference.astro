---
import MainLayout from '../layouts/MainLayout.astro';
import { HiVideoCamera, HiGlobeAlt, HiChatBubbleLeftRight, HiMicrophone, HiTicket} from 'react-icons/hi2';

const subtitle = "Celebrate with the community & discover what's next for Colyseus";
---

<MainLayout title="Remote Colyseus Conference 2026" description={subtitle} isHeaderExpanded={true}>
  <style>
    .conference-gradient {
      background: linear-gradient(135deg, #0c0a1d 0%, #1a1035 40%, #0f1a2e 70%, #0c0a1d 100%);
    }
    .grid-overlay {
      background-image:
        linear-gradient(rgba(139, 92, 246, 0.03) 1px, transparent 1px),
        linear-gradient(90deg, rgba(139, 92, 246, 0.03) 1px, transparent 1px);
      background-size: 60px 60px;
    }
    .glow-violet {
      text-shadow: 0 0 60px rgba(139, 92, 246, 0.5), 0 0 120px rgba(139, 92, 246, 0.3);
    }
    .glow-cyan {
      text-shadow: 0 0 40px rgba(34, 211, 238, 0.4);
    }
    .floating-orb {
      position: absolute;
      border-radius: 50%;
      filter: blur(80px);
      animation: float-orb 8s ease-in-out infinite;
    }
    @keyframes float-orb {
      0%, 100% { transform: translate(0, 0) scale(1); }
      33% { transform: translate(30px, -20px) scale(1.1); }
      66% { transform: translate(-20px, 20px) scale(0.9); }
    }
    .pulse-ring {
      animation: pulse-ring 3s ease-out infinite;
    }
    @keyframes pulse-ring {
      0% { transform: scale(0.8); opacity: 0.8; }
      50% { transform: scale(1.1); opacity: 0.4; }
      100% { transform: scale(0.8); opacity: 0.8; }
    }
    .btn-glow {
      position: relative;
      overflow: hidden;
    }
    .btn-glow::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s;
    }
    .btn-glow:hover::before {
      left: 100%;
    }
    .tentative-badge {
      animation: badge-pulse 2s ease-in-out infinite;
    }
    @keyframes badge-pulse {
      0%, 100% { opacity: 0.8; }
      50% { opacity: 1; }
    }
  </style>

  <!-- Hero Section -->
  <section class="conference-gradient text-gray-200 relative overflow-hidden min-h-[90vh] flex items-center">
    <!-- Grid overlay -->
    <div class="absolute inset-0 grid-overlay"></div>

    <!-- Floating orbs -->
    <div class="floating-orb bg-violet-600/20 w-96 h-96 -top-48 -left-48" style="animation-delay: 0s;"></div>
    <div class="floating-orb bg-cyan-500/15 w-80 h-80 top-1/3 -right-40" style="animation-delay: -3s;"></div>
    <div class="floating-orb bg-fuchsia-500/10 w-64 h-64 bottom-0 left-1/4" style="animation-delay: -5s;"></div>

    <!-- Decorative rings -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] rounded-full border border-violet-500/10 pulse-ring"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] rounded-full border border-violet-500/5 pulse-ring" style="animation-delay: -1s;"></div>

    <div class="container mx-auto px-6 text-center py-20 relative z-10">
      <div class="animate-from-top-fade">
        <div class="tentative-badge inline-flex items-center gap-2 bg-amber-500/20 backdrop-blur-sm rounded-full px-5 py-2 border border-amber-400/40 mb-8">
          <span class="w-2 h-2 rounded-full bg-amber-400 animate-pulse"></span>
          <span class="text-amber-300 text-sm font-medium uppercase tracking-wider">Date · To Be Announced</span>
        </div>

        <h1 class="text-5xl lg:text-7xl font-bold mb-6 glow-violet leading-tight">
          <span class="text-violet-300">Remote</span>
          <span class="text-white"> Colyseus</span><br class="sm:hidden" />
          <span class="text-cyan-400"> Conference</span>
          <span class="text-fuchsia-400"> 2026</span>
        </h1>

        <p class="text-xl lg:text-2xl text-gray-400 max-w-2xl mx-auto mt-8 leading-relaxed">
          {subtitle}
        </p>

        <p class="text-gray-500 mt-4 max-w-xl mx-auto">
          Our first-ever online conference! Join us for exciting announcements about the future of the framework, inspiring talks from the community, and a chance to connect with fellow developers.
        </p>
      </div>

      <!-- CTA Buttons -->
      <div class="animate-from-bottom-fade mt-16 flex flex-col sm:flex-row justify-center gap-6 max-w-2xl mx-auto">
        <a
          href="https://forms.gle/PYeTNGJkfcfhxowM6"
          target="_blank"
          class="btn-glow group flex-1 inline-flex items-center justify-center gap-2 px-10 py-6 text-xl font-semibold bg-gradient-to-br from-violet-600 to-violet-700 hover:from-violet-500 hover:to-violet-600 rounded-2xl transition-all transform hover:scale-105 shadow-2xl shadow-violet-500/30 hover:shadow-violet-500/50 border border-violet-400/20"
        >
          <HiTicket className="w-7 h-7 transition-transform group-hover:scale-110" />
          Pre-register
        </a>
        <a
          href="https://forms.gle/TzpNvdSNXeH2etwi9"
          target="_blank"
          class="btn-glow group flex-1 inline-flex items-center justify-center gap-2 px-10 py-6 text-xl font-semibold bg-gradient-to-br from-cyan-600 to-cyan-700 hover:from-cyan-500 hover:to-cyan-600 rounded-2xl transition-all transform hover:scale-105 shadow-2xl shadow-cyan-500/30 hover:shadow-cyan-500/50 border border-cyan-400/20"
        >
          <HiMicrophone className="w-7 h-7 transition-transform group-hover:scale-110" />
          Call for Speakers
        </a>
      </div>

      <!-- Additional info -->
      <div class="animate-from-bottom-fade mt-12 text-gray-500 text-sm">
        <p>We'll let you know as soon as the date and speaker lineup are confirmed!</p>
      </div>
    </div>
  </section>

  <!-- What to Expect Section -->
  <section class="bg-slate-900 text-gray-200 py-20 border-t border-violet-900/30">
    <div class="container mx-auto px-6">
      <h2 class="text-3xl lg:text-4xl font-semibold text-center mb-4 text-white">
        What's in Store
      </h2>
      <p class="text-gray-400 text-center mb-12 max-w-2xl mx-auto">
        A day packed with insights, reveals, and community vibes
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="bg-gradient-to-br from-slate-800/80 to-slate-900/80 rounded-2xl p-8 border border-slate-700/50 text-center hover:border-violet-500/30 transition-colors">
          <div class="text-5xl mb-4 flex justify-center text-violet-400">
            <HiVideoCamera className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-semibold text-violet-300 mb-3">Inspiring Talks</h3>
          <p class="text-gray-400">
            Hear from teams shipping real multiplayer games — their wins, challenges, and lessons learned
          </p>
        </div>

        <div class="bg-gradient-to-br from-slate-800/80 to-slate-900/80 rounded-2xl p-8 border border-slate-700/50 text-center hover:border-cyan-500/30 transition-colors">
          <div class="text-5xl mb-4 flex justify-center text-cyan-400">
            <HiGlobeAlt className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-semibold text-cyan-300 mb-3">Immersive Virtual Venue</h3>
          <p class="text-gray-400">
            Experience the conference inside <a href="https://instantworlds.io/" target="_blank" class="text-cyan-400 hover:underline">Instant Worlds</a> — hang out with fellow devs in a shared space!
          </p>
        </div>

        <div class="bg-gradient-to-br from-slate-800/80 to-slate-900/80 rounded-2xl p-8 border border-slate-700/50 text-center hover:border-fuchsia-500/30 transition-colors">
          <div class="text-5xl mb-4 flex justify-center text-fuchsia-400">
            <HiChatBubbleLeftRight className="w-12 h-12" />
          </div>
          <h3 class="text-xl font-semibold text-fuchsia-300 mb-3">Live Q&A & Networking</h3>
          <p class="text-gray-400">
            Chat with speakers, ask questions, and connect with the global Colyseus community
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- For Speakers Section -->
  <section class="bg-gradient-to-b from-slate-900 to-slate-950 text-gray-200 py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-3xl mx-auto text-center">
        <div class="text-5xl mb-4 flex justify-center text-cyan-400">
          <HiMicrophone className="w-12 h-12" />
        </div>
        <h2 class="text-3xl lg:text-4xl font-semibold mb-4 text-cyan-300">
          Share Your Story!
        </h2>
        <p class="text-gray-400 mb-8">
          Built something awesome with Colyseus? We'd love to hear about it! Share your journey, technical breakthroughs, or lessons learned with the community.
        </p>

        <div class="bg-slate-800/50 rounded-2xl p-8 border border-slate-700/50 text-left mb-8">
          <h3 class="text-lg font-semibold text-white mb-4">Pick a format that works for you:</h3>
          <ul class="space-y-3 text-gray-300">
            <li class="flex items-center gap-3">
              <span class="w-2 h-2 rounded-full bg-violet-400"></span>
              <span><strong class="text-violet-300">5 minutes</strong> — Lightning talk / quick tip</span>
            </li>
            <li class="flex items-center gap-3">
              <span class="w-2 h-2 rounded-full bg-cyan-400"></span>
              <span><strong class="text-cyan-300">15 minutes</strong> — Feature showcase / case study</span>
            </li>
            <li class="flex items-center gap-3">
              <span class="w-2 h-2 rounded-full bg-fuchsia-400"></span>
              <span><strong class="text-fuchsia-300">30 minutes</strong> — In-depth technical talk</span>
            </li>
            <li class="flex items-center gap-3">
              <span class="w-2 h-2 rounded-full bg-amber-400"></span>
              <span><strong class="text-amber-300">45 minutes</strong> — Comprehensive deep-dive</span>
            </li>
          </ul>
        </div>

        <a
          href="https://forms.gle/TzpNvdSNXeH2etwi9"
          target="_blank"
          class="inline-flex items-center gap-2 px-8 py-4 text-lg font-semibold bg-cyan-600 hover:bg-cyan-500 rounded-xl transition-all transform hover:scale-105"
        >
          Submit Speaker Proposal
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Stay Updated Section -->
  <section class="bg-slate-950 text-gray-200 py-16 border-t border-slate-800">
    <div class="container mx-auto px-6 text-center">
      <p class="text-gray-500 text-lg mb-6">
        Questions? Reach out on <a href="https://discord.gg/jjqrNFsBGC" target="_blank" class="text-violet-400 hover:text-violet-300 transition-colors">Discord</a>
      </p>
      <div class="flex justify-center gap-4">
        <a
          href="https://discord.gg/jjqrNFsBGC"
          target="_blank"
          class="inline-flex items-center gap-2 px-6 py-3 bg-slate-800 hover:bg-slate-700 rounded-lg font-medium transition-colors border border-slate-700"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 640 512"><path d="M524.531,69.836a1.5,1.5,0,0,0-.764-.7A485.065,485.065,0,0,0,404.081,32.03a1.816,1.816,0,0,0-1.923.91,337.461,337.461,0,0,0-14.9,30.6,447.848,447.848,0,0,0-134.426,0,309.541,309.541,0,0,0-15.135-30.6,1.89,1.89,0,0,0-1.924-.91A483.689,483.689,0,0,0,116.085,69.137a1.712,1.712,0,0,0-.788.676C39.068,183.651,18.186,294.69,28.43,404.354a2.016,2.016,0,0,0,.765,1.375A487.666,487.666,0,0,0,176.02,479.918a1.9,1.9,0,0,0,2.063-.676A348.2,348.2,0,0,0,208.12,430.4a1.86,1.86,0,0,0-1.019-2.588,321.173,321.173,0,0,1-45.868-21.853,1.885,1.885,0,0,1-.185-3.126c3.082-2.309,6.166-4.711,9.109-7.137a1.819,1.819,0,0,1,1.9-.256c96.229,43.917,200.41,43.917,295.5,0a1.812,1.812,0,0,1,1.924.233c2.944,2.426,6.027,4.851,9.132,7.16a1.884,1.884,0,0,1-.162,3.126,301.407,301.407,0,0,1-45.89,21.83,1.875,1.875,0,0,0-1,2.611,391.055,391.055,0,0,0,30.014,48.815,1.864,1.864,0,0,0,2.063.7A486.048,486.048,0,0,0,610.7,405.729a1.882,1.882,0,0,0,.765-1.352C623.729,277.594,590.933,167.465,524.531,69.836ZM222.491,337.58c-28.972,0-52.844-26.587-52.844-59.239S193.056,219.1,222.491,219.1c29.665,0,53.306,26.82,52.843,59.239C275.334,310.993,251.924,337.58,222.491,337.58Zm195.38,0c-28.971,0-52.843-26.587-52.843-59.239S388.437,219.1,417.871,219.1c29.667,0,53.307,26.82,52.844,59.239C470.715,310.993,447.538,337.58,417.871,337.58Z"/></svg>
          Join Discord
        </a>
      </div>
    </div>
  </section>
</MainLayout>

