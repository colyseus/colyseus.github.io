<MainLayout title="Colyseus Holyjam 2025" description={subtitle} image="/images/gamejam/fb-share.jpg" isHeaderExpanded={true}>
  <style>
    .holyjam-gradient {
      background: linear-gradient(135deg, #0f172a 0%, #1e3a2f 50%, #0f172a 100%);
    }
    .gold-glow {
      text-shadow: 0 0 40px rgba(251, 191, 36, 0.4);
    }
    .star {
      position: absolute;
      width: 4px;
      height: 4px;
      background: #fbbf24;
      border-radius: 50%;
      animation: twinkle 2s ease-in-out infinite;
    }
    @keyframes twinkle {
      0%, 100% { opacity: 0.3; transform: scale(1); }
      50% { opacity: 1; transform: scale(1.2); }
    }
    .snowflake {
      position: absolute;
      color: rgba(255, 255, 255, 0.6);
      font-size: 1rem;
      animation: fall linear infinite;
      pointer-events: none;
    }
    @keyframes fall {
      0% { transform: translateY(-10vh) rotate(0deg); opacity: 1; }
      100% { transform: translateY(100vh) rotate(360deg); opacity: 0.3; }
    }
    .duration-banner {
      animation: banner-glow 3s ease-in-out infinite;
    }
    @keyframes banner-glow {
      0%, 100% { box-shadow: 0 0 20px rgba(251, 191, 36, 0.1), 0 4px 20px rgba(0, 0, 0, 0.3); }
      50% { box-shadow: 0 0 30px rgba(251, 191, 36, 0.25), 0 4px 25px rgba(0, 0, 0, 0.4); }
    }
    .floating-character {
      animation: float 4s ease-in-out infinite;
    }
    .floating-character-delayed {
      animation: float 4s ease-in-out infinite;
      animation-delay: -2s;
    }
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-20px); }
    }
  </style>

