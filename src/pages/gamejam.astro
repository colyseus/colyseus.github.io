            daysRemaining = Math.ceil((endDate.getTime() - today.getTime()) / msPerDay);
          }

          document.getElementById('days-remaining')!.textContent = String(daysRemaining);
          document.getElementById('days-label')!.textContent = daysRemaining === 1 ? 'day' : 'days';
