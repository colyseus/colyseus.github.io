---
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
  image?: string;

  isHeaderExpanded?: boolean;
  isBlue?: boolean;
}

const { isHeaderExpanded = true, isBlue = false, title, description, image } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} image={image} />
	</head>
	<body>
		<Header isExpanded={isHeaderExpanded} isBlue={isBlue} />

		<main>
      <slot />
		</main>

		<Footer />
	</body>
</html>
